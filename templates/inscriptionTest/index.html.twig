{% extends 'base/base.html.twig' %} {% block body %}

<div class="hero-scene">
    <div class="text-center text-white hero-scene-content">
        <h1 class="amatic-sc-regular" style="font-size: 4rem">
            Créer un compte
        </h1>
        <p class="amatic-sc-regular" style="font-size: 2rem">
            Inscrivez vous !
        </p>
    </div>
</div>

{{ form_start(form, {'attr': {'class': 'container p-4'}}) }}

<div class="mb-3">
    {{ form_label(form.pseudo, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.pseudo, {'attr': {'class': 'form-control', 'id': 'pseudoInput'


    }}) }}
    {{ form_errors(form.pseudo) }}
</div>

<div class="mb-3">
    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'mailInput'


    }}) }}
    {{ form_errors(form.email) }}
</div>

<div class="mb-3">
    {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}})
    }}
    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'passwordInput'


    }}) }}
    {{ form_errors(form.password) }}
</div>

<div class="mb-3">
    {{ form_label(form.confirm_password, null, {'label_attr': {'class': 'form-label'


    }}) }}
    {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control', 'id': 'validationPasswordInput'


    }}) }}
    {{ form_errors(form.confirm_password) }}
</div>

<div class="text-center">
    <button type="submit" class="btn btn-primary" id="btnValidation">
        Inscription</button
    ><br /><br />
    <a href="{{ path('app_connexion') }}"
        >Vous avez déjà un compte ? Connectez-vous.</a
    >
</div>

{{ form_end(form) }}
{% endblock %}
